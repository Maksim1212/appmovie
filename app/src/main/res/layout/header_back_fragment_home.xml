<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_back_info_film"
    android:layout_width="match_parent"
    android:background="@color/main_color_background_app"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/tv_back_info_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_background_app"
        android:fontFamily="@font/montserrat_600"
        android:layout_marginTop="@dimen/size_margin_top_back"
        android:text="@string/detail"
        style="@style/DescriptionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/size_margin_start_back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_bar_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size_margin_top_back_i"
        android:layout_marginEnd="@dimen/size_margin_end_back"/>
</androidx.constraintlayout.widget.ConstraintLayout>
