<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_back_info_film"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/header_text_view_back_info_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_background_app"
        android:fontFamily="@font/montserrat_600"
        android:layout_marginTop="6dp"
        android:text="@string/detail"
        style="@style/DescriptionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_bar_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
