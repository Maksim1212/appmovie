<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background_app"
    tools:context="com.example.appmovie.movie.presentation.favorite.FavoriteFragment">

    <include
        android:id="@+id/header_in_main_menu"
        layout="@layout/header_component" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_film_favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="6" />


</androidx.constraintlayout.widget.ConstraintLayout>
