<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background_app"
    tools:context="com.example.appmovie.movie.presentation.favorite.FavoriteFragment">

    <include
        android:id="@+id/header_in_main_menu"
        layout="@layout/header_fragment_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/include_layout_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_film_favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_eight"
        android:layout_marginTop="@dimen/rv_layout_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_in_main_menu" />

    <TextView
        android:id="@+id/error_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_width_cover"
        android:text="@string/an_error_has_occurred"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/error_image_view"
        app:layout_constraintStart_toStartOf="@+id/error_image_view"
        app:layout_constraintTop_toTopOf="@+id/error_image_view" />

    <TextView
        android:id="@+id/error_text_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again_or_come_back_later"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/error_text_header"
        app:layout_constraintStart_toStartOf="@id/error_text_header"
        app:layout_constraintTop_toBottomOf="@id/error_text_header" />

    <ImageView
        android:id="@+id/error_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eror_margin_top"
        android:src="@drawable/box_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/error_to_try_button"
        style="@style/ColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_offset"
        android:text="@string/to_try"
        app:layout_constraintEnd_toEndOf="@+id/error_text_text"
        app:layout_constraintStart_toStartOf="@+id/error_text_text"
        app:layout_constraintTop_toBottomOf="@+id/error_text_text" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_an_empty_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eror_margin_top"
        android:src="@drawable/box_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_an_empty_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_width_cover"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="@string/header_empty_fragment"
        android:textColor="@color/white"
        android:textSize="@dimen/header_search_fragment"
        app:layout_constraintEnd_toEndOf="@+id/image_an_empty_fragment"
        app:layout_constraintStart_toStartOf="@+id/image_an_empty_fragment"
        app:layout_constraintTop_toTopOf="@+id/image_an_empty_fragment" />

    <TextView
        android:id="@+id/an_empty_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/empty_fragment"
        android:textColor="@color/white"
        android:textSize="@dimen/search_fragment"
        app:layout_constraintEnd_toEndOf="@id/header_an_empty_fragment"
        app:layout_constraintStart_toStartOf="@id/header_an_empty_fragment"
        app:layout_constraintTop_toBottomOf="@id/header_an_empty_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
