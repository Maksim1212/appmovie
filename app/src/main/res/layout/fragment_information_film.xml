<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_background_app">

        <include
        android:id="@+id/header_in_main_menu"
        layout="@layout/header_back_fragment_home" />

        <ImageView
            android:id="@+id/promo_cover"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/blue_color"
            android:src="@drawable/ic_calendar_blank"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/header_in_main_menu"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cover_info_film"
            android:layout_width="@dimen/size_shapeable_imageView_width"
            android:layout_height="@dimen/size_shapeable_imageView_height"
            android:layout_marginStart="24dp"
            android:background="@color/main_color_background_app"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/promo_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.RoundedCorner"
            tools:src="@drawable/ic_example" />

        <ImageView
            android:id="@+id/rating_film"
            android:layout_width="@dimen/size_big"
            android:layout_height="@dimen/size_big"
            android:layout_marginStart="240dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/star"
            app:layout_constraintStart_toEndOf="@id/cover_info_film"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rating_info_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/orange_color"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintStart_toEndOf="@id/rating_film"
            tools:layout_editor_absoluteY="280dp"
            tools:text="9.5"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/name_info_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="308dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="139dp"
            tools:text="Spiderman No Way Home" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
