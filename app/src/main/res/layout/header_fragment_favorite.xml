<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/header_in_main_menu"
android:layout_width="match_parent"
android:background="@color/main_color_background_app"
android:layout_height="40dp">

<TextView
    android:id="@+id/tv_back_favorite_film"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color_background_app"
    android:fontFamily="@font/montserrat_600"
    android:layout_marginTop="@dimen/size_margin_top_back"
    android:text="@string/watch_list"
    style="@style/DescriptionTitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<ImageView
    android:id="@+id/iv_back_icon_f"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="@dimen/size_margin_start_back" />
</androidx.constraintlayout.widget.ConstraintLayout>
