<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_color_background_app">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_actor"
        android:layout_width="@dimen/size_width_cover"
        android:layout_height="@dimen/size_width_cover"
        android:src="@color/blue_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_actors"
        android:layout_width="@dimen/size_name_actors"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_eight"
        android:fontFamily="@font/poppins_500"
        android:gravity="center"
        android:text="Балуков Максим"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_profile_actor"
        app:layout_constraintStart_toStartOf="@id/iv_profile_actor"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_actor" />


</androidx.constraintlayout.widget.ConstraintLayout>
